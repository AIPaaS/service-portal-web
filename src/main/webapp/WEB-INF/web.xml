<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>paas</display-name>
  <filter>
    <filter-name>LoginFilter</filter-name>
    <filter-class>com.ai.paas.ipaas.system.filter.LoginFilter</filter-class>
    <init-param>
      <param-name>ignore_suffix</param-name>
      <param-value>.map,.ico,.swf,.flv,.png,.jpg,.jpeg,.gif,.css,.js,.html,.htm</param-value>
    </init-param>
    <init-param>
      <param-name>ignore_pages</param-name>
      <param-value>/ses/mapping,/,/index.jsp,/help/center,/help/nt,/help/mail,/help/iaas,/help/paas,/help/FAQ,/help/manual,/mds/introduce,/mcs/introduce,/ccs/introduce,/dbs/introduce,/rcs/introduce,/dss/introduce,/idps/introduce,/txs/introduce,/ats/introduce,/audit/ckUserName,/audit/ckService,/audit/toSignOut,/audit/doRegister,/audit/toRegister,/config/toregisterservice,/cache/toCache,/config/detail,/audit/toLogin,/audit/doLogin,/audit/doNTLogin,/audit/ckUser,/audit/uniqueEmail,/audit/uniquePhone,/audit/toRegisterSuccess,/email/sendEmail,/audit/verfiy_email,/audit/toActiveAccount,/clinicCountManager/captcha-image,/jsp/common/contactUs.jsp,/audit/toDownloadPage,/audit/download,/email/sendEmailService,/des/initapply,/ses/initapply,/oa/getOaOperators,/oa/oaAuditResultNotify,/virtualMachine/initapply,/VirtualIntegration/vmDetailSelect,/VirtualIntegration/orderDetailQuery,/VirtualIntegration/vmDetail,/jsp/virtualMachine/vmOrderDetail.jsp,/oa/oaAuditPremise,/jsp/maintain/main.jsp</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>CAS Authentication Filter</filter-name>
    <filter-class>
           org.jasig.cas.client.authentication.AuthenticationFilter
       </filter-class>
    <init-param>
      <param-name>casServerLoginUrl</param-name>
      <param-value>https://sso.asiainfo.com:443/login</param-value>
    </init-param>
    <init-param>
      <param-name>serverName</param-name>
      <param-value>http://10.1.228.200:14201</param-value>
    </init-param>
    <init-param>
      <param-name>renew</param-name>
      <param-value>false</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>CAS Validation Filter</filter-name>
    <filter-class>
           org.jasig.cas.client.validation.Cas20ProxyReceivingTicketValidationFilter
       </filter-class>
    <init-param>
      <param-name>casServerUrlPrefix</param-name>
      <param-value>https://sso.asiainfo.com:443</param-value>
    </init-param>
    <init-param>
      <param-name>serverName</param-name>
      <param-value>http://10.1.228.200:14201</param-value>
    </init-param>
    <init-param>
      <param-name>redirectAfterValidation</param-name>
      <param-value>false</param-value>
    </init-param>
  </filter>
  <filter>
    <filter-name>ApplyAuditFilter</filter-name>
    <filter-class>
           com.ai.paas.ipaas.apply.filter.ApplyAuditFilter
    </filter-class>
  </filter>
  <filter-mapping>
    <filter-name>CAS Authentication Filter</filter-name>
    <url-pattern>/audit/toNTLogin</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>CAS Validation Filter</filter-name>
    <url-pattern>/audit/toNTLogin</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>ApplyAuditFilter</filter-name>
    <url-pattern>/apply/applyAudit</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>LoginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>springmvc</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>
				classpath*:common/springmvc-servlet.xml
        	</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>springmvc</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <jsp-config>
    <taglib>
      <taglib-uri>/spring-form</taglib-uri>
      <taglib-location>/WEB-INF/tag/spring-form.tld</taglib-location>
    </taglib>
  </jsp-config>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>