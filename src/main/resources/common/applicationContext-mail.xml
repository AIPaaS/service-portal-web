<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="javaMailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <!-- 服务器 -->
        <property name="host" value="smtp.126.com" />
        <!-- 端口号 -->
        <property name="port" value="25" />
        <!-- 用户名 -->
        <property name="username" value="ai_cloud_001@126.com" />
        <!--  密码   -->
        <property name="password" value="yuanman123" />
        <!-- SMTP服务器验证 -->
        <property name="javaMailProperties">
            <props>
               <!-- 验证身份 -->
               <prop key="mail.smtp.auth">true</prop>
            </props>
        </property>
    </bean>
    
    <bean id="simpleMailMessage" class="org.springframework.mail.SimpleMailMessage">
        <property name="from" value="ai_cloud_001@126.com" />
    </bean>
    
    <bean id="emailSrv" class="com.ai.paas.ipaas.email.EmailServiceImpl">
        <property name="javaMailSender" ref="javaMailSender" />
        <property name="simpleMailMessage" ref="simpleMailMessage" />
    </bean>
    
    <bean id="simpleMail" class="com.ai.paas.ipaas.system.util.Email">
        <property name="javaMailSender" ref="javaMailSender" />
        <property name="simpleMailMessage" ref="simpleMailMessage" />
    </bean>
    
    <!-- 
       目前我用过的EMAIL账号都是网易的,下面列出网易的SMTP服务器名和端口号:
       网易邮箱          SMTP服务器     SMTP端口    POP3服务器      POP3端口
       @126.com     smtp.126.com      25         pop3.126.com      110
       @163.com     smtp.163.com      25         pop3.163.com      110
       @yeah.net    smtp.yeah.net      25         pop3.yeah.net     110
    -->
</beans>